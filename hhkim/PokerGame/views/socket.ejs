<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <script src="js/jquery.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.3.5.js"></script>
    <script>
    
    var socket = io.connect("http://localhost:3303");
    
	$(function(){
		$('button').click(function(){
		
		socket.emit('chat', $('.chatinput').val());	
		$('.chatinput').val('');
		});

	});
		
		/*function add(){
			socket.emit('chat', $('.chatinput').val());	
    		$('.chatinput').val('');
    		});
		};*/
		
		
		
	function add()
	{
    	var test = document.socketT.testadd.value;
		socket.emit('start', test);	
    	document.socketT.testadd.value = "";
    		
		//$("#chatwindow").append("<div>"+test+"</div>");
	}
	
	socket.on('out', function(data){
			$('#chatwindow').append("<div>"+data+"</div>");
	});
    		
    </script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
    	#chatwindow div:nth-child(odd){background:#f8f8f8;}
    </style>
  </head>
  <body>
    <h1><%= title %></h1>
    <form name="socketT">
 	<div id="chatwindow">왜 안될까</div>
 	<input type="text" name="testadd" class="chatinput"> <button type="button" onclick=add()>SEND</button>
   <button type="add" onclick="addImage()">add</button>
   </form>
  </body>
</html>
